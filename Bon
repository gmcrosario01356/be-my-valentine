<body>

<div class="card">
    <div id="content">
        <h1>Will you be my Valentine?</h1>
        <div class="tip" id="tipText">Spider-Man is watching you</div>
        <div class="spiderman">
            <div class="eye left"></div>
            <div class="eye right"></div>
        </div>
        <div class="flowers">✿ ✿ ✿</div>
        <div class="buttons">
            <button id="yesBtn">YES</button>
            <button id="noBtn">NO</button>
        </div>
    </div>
    <div id="success" class="success">
        <h2>YAY! ❤️</h2>
        <p>You’re officially my Valentine</p>
        <div class="love">I love you, my Bon</div>
    </div>
</div>

<script>
    const yesBtn = document.getElementById("yesBtn");
    const noBtn = document.getElementById("noBtn");
    const content = document.getElementById("content");
    const success = document.getElementById("success");
    const tipText = document.getElementById("tipText");

    const tips = ["Sad Spidey...", "Are you sure?", "Spidey is judging...", "YES is inevitable", "Just click YES!"];
    let yesSize = 1;
    let tipIndex = 0;

    function moveNoButton() {
        yesSize += 0.4;
        yesBtn.style.transform = `scale(${yesSize})`;
        tipText.textContent = tips[tipIndex % tips.length];
        tipIndex++;
        const container = document.querySelector('.buttons');
        const maxX = container.clientWidth - noBtn.clientWidth;
        const maxY = container.clientHeight - noBtn.clientHeight;
        noBtn.style.left = Math.floor(Math.random() * maxX) + "px";
        noBtn.style.top = Math.floor(Math.random() * maxY) + "px";
    }

    noBtn.addEventListener("mouseover", moveNoButton);
    noBtn.addEventListener("click", moveNoButton);
    yesBtn.addEventListener("click", () => {
        content.style.display = "none";
        success.style.display = "block";
    });
</script>
</body>
